FROM node:lts

WORKDIR /app/backend

COPY --chown=node:node package.json pnpm-lock.yaml ./
COPY --chown=node:node prisma ./prisma/

RUN npm install -g pnpm \
    && pnpm install --frozen-lockfile \
    && pnpm build

COPY --chown=node:node . .

USER node

EXPOSE 3000

CMD ["pnpm", "start:migrate:prod"]
